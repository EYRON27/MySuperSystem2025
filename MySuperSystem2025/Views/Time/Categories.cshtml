@model List<MySuperSystem2025.Models.ViewModels.Time.TimeCategoryViewModel>
@{
    ViewData["Title"] = "Time Categories";
}

<div class="container-fluid" style="max-width: 1200px;">
    <div class="my-4">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h1 class="h3"><i class="bi bi-tags me-2"></i>Time Categories</h1>
                <p class="text-muted mb-0">Manage categories for time tracking</p>
            </div>
            <a asp-action="CreateCategory" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>New Category
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row g-3">
            @foreach (var category in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">@category.Name</h5>
                                @if (category.IsDefault)
                                {
                                    <span class="badge bg-secondary">Default</span>
                                }
                            </div>
                            
                            @if (!string.IsNullOrEmpty(category.Description))
                            {
                                <p class="text-muted small mb-3">@category.Description</p>
                            }
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">@category.EntryCount entries</small>
                                <div>
                                    <a asp-action="EditCategory" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    @if (!category.IsDefault)
                                    {
                                        <a asp-action="DeleteCategory" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-tags" style="font-size: 4rem; opacity: 0.3;"></i>
            <p class="text-muted mt-3">No categories found</p>
            <a asp-action="CreateCategory" class="btn btn-primary">Create Your First Category</a>
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>
</div>
