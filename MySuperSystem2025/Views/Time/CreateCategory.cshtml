@model MySuperSystem2025.Models.ViewModels.Time.CreateTimeCategoryViewModel
@{
    ViewData["Title"] = "Create Category";
}

<div class="container" style="max-width: 700px;">
    <div class="my-4">
        <h1 class="h3"><i class="bi bi-tag me-2"></i>Create Time Category</h1>
        <p class="text-muted">Add a new category for organizing time entries</p>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <form asp-action="CreateCategory" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="e.g., Work, Study, Games" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Brief description of this category..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i>Create
                    </button>
                    <a asp-action="Categories" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
