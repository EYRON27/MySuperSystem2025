@model MySuperSystem2025.Models.ViewModels.Time.TimeEntryListItemViewModel
@{
    ViewData["Title"] = "Delete Time Entry";
}

<div class="container" style="max-width: 600px;">
    <div class="my-4">
        <h1 class="h3 text-danger"><i class="bi bi-trash me-2"></i>Delete Time Entry</h1>
        <p class="text-muted">Are you sure you want to delete this time entry?</p>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <dl class="row mb-0">
                <dt class="col-sm-4">Category</dt>
                <dd class="col-sm-8">@Model.CategoryName</dd>

                <dt class="col-sm-4">Start Time</dt>
                <dd class="col-sm-8">@Model.StartTime.ToString("MMM dd, yyyy HH:mm")</dd>

                <dt class="col-sm-4">End Time</dt>
                <dd class="col-sm-8">@Model.EndTime.ToString("MMM dd, yyyy HH:mm")</dd>

                <dt class="col-sm-4">Duration</dt>
                <dd class="col-sm-8">@Model.FormattedDuration</dd>

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <dt class="col-sm-4">Notes</dt>
                    <dd class="col-sm-8">@Model.Notes</dd>
                }
            </dl>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash me-1"></i>Delete
            </button>
        </form>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</div>
