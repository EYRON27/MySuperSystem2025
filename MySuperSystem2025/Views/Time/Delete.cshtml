@model MySuperSystem2025.Models.ViewModels.Time.TimeEntryListItemViewModel
@{
    ViewData["Title"] = "Delete Time Entry";
}

@await Html.PartialAsync("_ConfirmationStyles")

<div class="confirm-container">
    <div class="confirm-header">
        <h1><i class="bi bi-trash me-2"></i>Delete Time Entry</h1>
        <p>Are you sure you want to delete this time entry?</p>
    </div>

    <div class="confirm-card">
        <div class="confirm-card-body">
            <div class="confirm-warning">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Warning:</strong> This action cannot be undone!
            </div>

            <div class="confirm-details">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Category</dt>
                    <dd class="col-sm-8"><span class="badge bg-secondary">@Model.CategoryName</span></dd>

                    <dt class="col-sm-4">Start Time</dt>
                    <dd class="col-sm-8">@Model.StartTime.ToString("MMM dd, yyyy HH:mm")</dd>

                    <dt class="col-sm-4">End Time</dt>
                    <dd class="col-sm-8">@Model.EndTime.ToString("MMM dd, yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Duration</dt>
                    <dd class="col-sm-8 fw-bold text-primary">@Model.FormattedDuration</dd>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <dt class="col-sm-4">Notes</dt>
                        <dd class="col-sm-8 fst-italic">@Model.Notes</dd>
                    }
                </dl>
            </div>

            <div class="confirm-actions">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger btn-confirm">
                        <i class="bi bi-trash me-1"></i>Delete Entry
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </div>
    </div>
</div>
