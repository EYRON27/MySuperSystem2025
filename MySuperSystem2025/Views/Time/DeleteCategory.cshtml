@model MySuperSystem2025.Models.ViewModels.Time.TimeCategoryViewModel
@{
    ViewData["Title"] = "Delete Category";
}

@await Html.PartialAsync("_ConfirmationStyles")

<div class="confirm-container">
    <div class="confirm-header">
        <h1><i class="bi bi-trash me-2"></i>Delete Category</h1>
        <p>Are you sure you want to delete this time category?</p>
    </div>

    <div class="confirm-card">
        <div class="confirm-card-body">
            <div class="confirm-warning">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Warning:</strong> This action cannot be undone!
            </div>

            <div class="confirm-details">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8 fw-bold">@Model.Name</dd>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    }

                    <dt class="col-sm-4">Type</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsDefault)
                        {
                            <span class="badge bg-secondary">Default</span>
                        }
                        else
                        {
                            <span class="badge bg-light text-dark">Custom</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Time Entries</dt>
                    <dd class="col-sm-8">
                        @if (Model.EntryCount > 0)
                        {
                            <span class="badge bg-warning text-dark">@Model.EntryCount @(Model.EntryCount == 1 ? "entry" : "entries")</span>
                        }
                        else
                        {
                            <span class="text-success">No entries</span>
                        }
                    </dd>
                </dl>
            </div>

            @if (Model.EntryCount > 0)
            {
                <div style="background: #fef2f2; border: 1px solid #fecaca; border-radius: 6px; padding: 0.875rem 1rem; margin-top: 1rem; font-size: 0.875rem; color: #991b1b;">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Note:</strong> This category has @Model.EntryCount time @(Model.EntryCount == 1 ? "entry" : "entries"). They will remain but be uncategorized after deletion.
                </div>
            }

            <div class="confirm-actions">
                <form asp-action="DeleteCategory" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger btn-confirm">
                        <i class="bi bi-trash me-1"></i>Delete Category
                    </button>
                </form>
                <a asp-action="Categories" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </div>
    </div>
</div>
