@model MySuperSystem2025.Models.ViewModels.Time.TimeCategoryViewModel
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container" style="max-width: 600px;">
    <div class="my-4">
        <h1 class="h3 text-danger"><i class="bi bi-trash me-2"></i>Delete Category</h1>
        <p class="text-muted">Are you sure you want to delete this category?</p>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <dl class="row mb-0">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <dt class="col-sm-4">Description</dt>
                    <dd class="col-sm-8">@Model.Description</dd>
                }

                <dt class="col-sm-4">Time Entries</dt>
                <dd class="col-sm-8">@Model.EntryCount</dd>

                @if (Model.IsDefault)
                {
                    <dt class="col-sm-4">Type</dt>
                    <dd class="col-sm-8"><span class="badge bg-secondary">Default Category</span></dd>
                }
            </dl>

            @if (Model.EntryCount > 0)
            {
                <div class="alert alert-warning mt-3 mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> This category has @Model.EntryCount time @(Model.EntryCount == 1 ? "entry" : "entries"). 
                    The entries will remain but will be categorized as "Uncategorized".
                </div>
            }
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <form asp-action="DeleteCategory" method="post" class="d-inline">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash me-1"></i>Delete Category
            </button>
        </form>
        <a asp-action="Categories" class="btn btn-outline-secondary">Cancel</a>
    </div>
</div>
