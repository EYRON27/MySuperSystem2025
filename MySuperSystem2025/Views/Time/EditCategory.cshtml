@model MySuperSystem2025.Models.ViewModels.Time.EditTimeCategoryViewModel
@{
    ViewData["Title"] = "Edit Category";
}

<div class="container" style="max-width: 700px;">
    <div class="my-4">
        <h1 class="h3"><i class="bi bi-pencil me-2"></i>Edit Time Category</h1>
        <p class="text-muted">Update category details</p>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <form asp-action="EditCategory" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                @if (Model.IsDefault)
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>This is a default category
                    </div>
                }

                @if (Model.TotalEntries > 0)
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        This category has <strong>@Model.TotalEntries</strong> time entries
                    </div>
                }

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i>Update
                    </button>
                    <a asp-action="Categories" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
