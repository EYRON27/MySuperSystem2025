@model MySuperSystem2025.Models.ViewModels.Food.EditFoodEntryViewModel
@{
    ViewData["Title"] = "Edit Food Entry";
    var mealTypes = ViewBag.MealTypes as string[];
}

<style>
    .form-container {
        max-width: 700px;
        margin: 0 auto;
    }
    
    .page-header {
        margin-bottom: 2rem;
    }
    
    .page-header h1 {
        font-size: 1.75rem;
        font-weight: 600;
        color: #1a1a1a;
    }
    
    .form-card {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        padding: 2rem;
    }
    
    .form-section {
        margin-bottom: 2rem;
    }
    
    .form-section-title {
        font-size: 1rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #e5e7eb;
    }
    
    .form-label {
        font-weight: 500;
        color: #374151;
        margin-bottom: 0.5rem;
    }
    
    .form-control, .form-select {
        border: 1px solid #d1d5db;
        border-radius: 6px;
        padding: 0.625rem 0.875rem;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #16a34a;
        box-shadow: 0 0 0 3px rgba(22, 163, 74, 0.1);
    }
    
    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
    
    .btn-primary {
        background: #16a34a;
        border-color: #16a34a;
        padding: 0.75rem 2rem;
        font-weight: 500;
    }
    
    .btn-primary:hover {
        background: #15803d;
        border-color: #15803d;
    }
    
    .macro-inputs {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
    }
    
    @@media (max-width: 768px) {
        .macro-inputs {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    
    .meal-type-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 0.75rem;
    }
    
    @@media (max-width: 576px) {
        .meal-type-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    
    .meal-type-btn {
        padding: 1rem;
        border: 2px solid #e5e7eb;
        border-radius: 8px;
        background: white;
        cursor: pointer;
        text-align: center;
        transition: all 0.2s ease;
    }
    
    .meal-type-btn:hover {
        border-color: #16a34a;
        background: #f0fdf4;
    }
    
    .meal-type-btn.selected {
        border-color: #16a34a;
        background: #dcfce7;
    }
    
    .meal-type-btn i {
        font-size: 1.5rem;
        display: block;
        margin-bottom: 0.5rem;
    }
    
    .meal-type-btn span {
        font-weight: 500;
        color: #374151;
    }
</style>

<div class="form-container">
    <div class="page-header">
        <h1><i class="bi bi-pencil me-2"></i>Edit Food Entry</h1>
        <p class="text-muted mb-0">Update food entry details</p>
    </div>

    <div class="form-card">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- Basic Info Section -->
            <div class="form-section">
                <div class="form-section-title"><i class="bi bi-info-circle me-1"></i>Basic Information</div>
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Meal Type</label>
                    <div class="meal-type-grid">
                        @if (mealTypes != null)
                        {
                            @foreach (var type in mealTypes)
                            {
                                var icon = type switch
                                {
                                    "Breakfast" => "bi-sunrise",
                                    "Lunch" => "bi-sun",
                                    "Dinner" => "bi-moon-stars",
                                    "Snack" => "bi-cup-hot",
                                    _ => "bi-egg-fried"
                                };
                                <div class="meal-type-btn @(Model.MealType == type ? "selected" : "")" onclick="selectMealType('@type', this)">
                                    <i class="bi @icon"></i>
                                    <span>@type</span>
                                </div>
                            }
                        }
                    </div>
                    <input type="hidden" asp-for="MealType" id="mealTypeInput" />
                    <span asp-validation-for="MealType" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Date" class="form-label"></label>
                        <input asp-for="Date" type="date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ServingSize" class="form-label"></label>
                        <input asp-for="ServingSize" class="form-control" placeholder="e.g., 1 cup, 100g" />
                        <span asp-validation-for="ServingSize" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Nutrition Section -->
            <div class="form-section">
                <div class="form-section-title"><i class="bi bi-bar-chart me-1"></i>Nutritional Information</div>
                
                <div class="macro-inputs">
                    <div class="mb-3">
                        <label asp-for="Calories" class="form-label"></label>
                        <input asp-for="Calories" type="number" class="form-control" min="0" max="10000" />
                        <span asp-validation-for="Calories" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Protein" class="form-label"></label>
                        <input asp-for="Protein" type="number" step="0.1" class="form-control" min="0" />
                        <span asp-validation-for="Protein" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Carbs" class="form-label"></label>
                        <input asp-for="Carbs" type="number" step="0.1" class="form-control" min="0" />
                        <span asp-validation-for="Carbs" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Fats" class="form-label"></label>
                        <input asp-for="Fats" type="number" step="0.1" class="form-control" min="0" />
                        <span asp-validation-for="Fats" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Notes Section -->
            <div class="form-section">
                <div class="mb-3">
                    <label asp-for="Notes" class="form-label"></label>
                    <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Any additional notes..."></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>Save Changes
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function selectMealType(type, element) {
            // Remove selected from all buttons
            document.querySelectorAll('.meal-type-btn').forEach(btn => btn.classList.remove('selected'));
            // Add selected to clicked button
            element.classList.add('selected');
            // Update hidden input
            document.getElementById('mealTypeInput').value = type;
        }
    </script>
}
