@model MySuperSystem2025.Models.ViewModels.Food.FoodEntryListItemViewModel
@{
    ViewData["Title"] = "Delete Food Entry";
}

@await Html.PartialAsync("_ConfirmationStyles")

<div class="confirm-container">
    <div class="confirm-header">
        <h1><i class="bi bi-trash me-2"></i>Delete Food Entry</h1>
        <p>Are you sure you want to delete this food entry?</p>
    </div>

    <div class="confirm-card">
        <div class="confirm-card-body">
            <div class="confirm-warning">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Warning:</strong> This action cannot be undone!
            </div>

            <div class="confirm-details">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Food Name</dt>
                    <dd class="col-sm-8 fw-bold">@Model.Name</dd>

                    <dt class="col-sm-4">Meal Type</dt>
                    <dd class="col-sm-8">
                        <span class="badge @Model.MealTypeBadgeClass">
                            <i class="@Model.MealTypeIcon me-1"></i>@Model.MealType
                        </span>
                    </dd>

                    <dt class="col-sm-4">Date</dt>
                    <dd class="col-sm-8">@Model.Date.ToString("MMMM dd, yyyy")</dd>

                    @if (!string.IsNullOrEmpty(Model.ServingSize))
                    {
                        <dt class="col-sm-4">Serving Size</dt>
                        <dd class="col-sm-8">@Model.ServingSize</dd>
                    }

                    <dt class="col-sm-4">Calories</dt>
                    <dd class="col-sm-8 fw-bold text-danger">@Model.Calories kcal</dd>

                    <dt class="col-sm-4">Macros</dt>
                    <dd class="col-sm-8">
                        <span class="text-primary">P: @Model.Protein.ToString("N1")g</span> · 
                        <span class="text-warning">C: @Model.Carbs.ToString("N1")g</span> · 
                        <span class="text-purple">F: @Model.Fats.ToString("N1")g</span>
                    </dd>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <dt class="col-sm-4">Notes</dt>
                        <dd class="col-sm-8 fst-italic">@Model.Notes</dd>
                    }
                </dl>
            </div>

            <div class="confirm-actions">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger btn-confirm">
                        <i class="bi bi-trash me-1"></i>Delete Entry
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </div>
    </div>
</div>
