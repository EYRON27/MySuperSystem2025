@model MySuperSystem2025.Models.ViewModels.Expense.ExpenseListViewModel
@{
    ViewData["Title"] = "All Expenses";
}

<style>
    .expense-list {
        max-width: 1400px;
        margin: 0 auto;
    }
    
    .page-header {
        margin-bottom: 2rem;
    }
    
    .page-header h1 {
        font-size: 1.75rem;
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 0.5rem;
    }
    
    .filter-card {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }
    
    .summary-info {
        background: #eff6ff;
        border: 1px solid #bfdbfe;
        border-radius: 8px;
        padding: 1rem 1.25rem;
        margin-bottom: 1.5rem;
        color: #1e40af;
        font-size: 0.875rem;
    }
    
    .main-card {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        padding: 1.75rem;
    }
    
    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }
    
    .card-title {
        font-size: 1rem;
        font-weight: 600;
        color: #1a1a1a;
    }
    
    .expense-table {
        width: 100%;
        border-collapse: collapse;
    }
    
    .expense-table th {
        font-size: 0.875rem;
        font-weight: 500;
        color: #6c757d;
        padding: 0.75rem 1rem;
        text-align: left;
        border-bottom: 1px solid #e5e7eb;
    }
    
    .expense-table td {
        padding: 1rem;
        border-bottom: 1px solid #f3f4f6;
        font-size: 0.875rem;
    }
    
    .expense-table tr:last-child td {
        border-bottom: none;
    }
    
    .expense-table tr:hover {
        background: #f9fafb;
    }
    
    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
        color: #6c757d;
    }
    
    .empty-state i {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.3;
    }
    
    .action-buttons {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }
    
    .btn-primary {
        background: #2563eb;
        border-color: #2563eb;
        padding: 0.625rem 1.25rem;
        font-size: 0.875rem;
        font-weight: 500;
    }
    
    .btn-primary:hover {
        background: #1d4ed8;
        border-color: #1d4ed8;
    }
    
    .btn-outline-secondary {
        padding: 0.625rem 1.25rem;
        font-size: 0.875rem;
        font-weight: 500;
    }
    
    /* Consistent action button sizing */
    .btn-action {
        padding: 0.5rem 0.75rem;
        font-size: 0.875rem;
        border-radius: 6px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 36px;
        height: 36px;
    }
    
    .btn-action i {
        font-size: 1rem;
    }
    
    .btn-action.btn-sm {
        padding: 0.375rem 0.625rem;
        min-width: 32px;
        height: 32px;
    }
    
    .btn-action.btn-sm i {
        font-size: 0.875rem;
    }
</style>

<div class="expense-list">
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h1><i class="bi bi-list-ul me-2"></i>All Expenses</h1>
                <p class="text-muted mb-0">View and manage all expense records</p>
            </div>
            <div class="action-buttons">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Add Expense
                </a>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="filter-card">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label fw-500">Period</label>
                <select name="period" class="form-select">
                    <option value="">All Time</option>
                    <option value="daily" selected="@(Model.FilterPeriod == "daily")">Today</option>
                    <option value="weekly" selected="@(Model.FilterPeriod == "weekly")">This Week</option>
                    <option value="monthly" selected="@(Model.FilterPeriod == "monthly")">This Month</option>
                    <option value="yearly" selected="@(Model.FilterPeriod == "yearly")">This Year</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label fw-500">Category</label>
                <select name="categoryId" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id" selected="@(Model.FilterCategoryId == category.Id)">@category.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel me-1"></i>Filter
                </button>
            </div>
            <div class="col-md-3">
                <a asp-action="List" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-x-circle me-1"></i>Clear Filters
                </a>
            </div>
        </form>
    </div>

    <!-- Summary -->
    <div class="summary-info">
        <i class="bi bi-info-circle me-2"></i>
        Showing <strong>@Model.TotalCount</strong> expenses totaling <strong>&#8369;@Model.TotalAmount.ToString("N2")</strong>
    </div>

    <!-- Expenses Table -->
    <div class="main-card">
        <div class="card-header">
            <h5 class="card-title">Expense Records</h5>
            <span class="badge bg-primary">@Model.TotalCount total</span>
        </div>

        @if (Model.Expenses.Any())
        {
            <table class="expense-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Reason</th>
                        <th style="text-align: right;">Amount</th>
                        <th style="text-align: center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model.Expenses)
                    {
                        <tr>
                            <td>@expense.Date.ToString("MMM dd, yyyy")</td>
                            <td><span class="badge bg-secondary">@expense.CategoryName</span></td>
                            <td>@expense.Reason</td>
                            <td style="text-align: right; font-weight: 600;">&#8369;@expense.Amount.ToString("N2")</td>
                            <td style="text-align: center;">
                                <a asp-action="Edit" asp-route-id="@expense.Id" class="btn btn-action btn-sm btn-outline-primary" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@expense.Id" class="btn btn-action btn-sm btn-outline-danger ms-1" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-inbox"></i>
                <p>No expenses found</p>
                <a asp-action="Create" class="btn btn-primary">Add Your First Expense</a>
            </div>
        }
    </div>
</div>
