@model MySuperSystem2025.Models.ViewModels.Expense.ExpenseListViewModel
@{
    ViewData["Title"] = "All Expenses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 fw-bold"><i class="bi bi-list-ul me-2"></i>All Expenses</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Add Expense
    </a>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Period</label>
                <select name="period" class="form-select">
                    <option value="">All Time</option>
                    <option value="daily" selected="@(Model.FilterPeriod == "daily")">Today</option>
                    <option value="weekly" selected="@(Model.FilterPeriod == "weekly")">This Week</option>
                    <option value="monthly" selected="@(Model.FilterPeriod == "monthly")">This Month</option>
                    <option value="yearly" selected="@(Model.FilterPeriod == "yearly")">This Year</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Category</label>
                <select name="categoryId" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id" selected="@(Model.FilterCategoryId == category.Id)">@category.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel me-1"></i>Filter
                </button>
            </div>
            <div class="col-md-3">
                <a asp-action="List" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-x-circle me-1"></i>Clear Filters
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Summary -->
<div class="alert alert-info">
    <i class="bi bi-info-circle me-2"></i>
    Showing <strong>@Model.TotalCount</strong> expenses totaling <strong>?@Model.TotalAmount.ToString("N2")</strong>
</div>

<!-- Expenses Table -->
<div class="card">
    <div class="card-body p-0">
        @if (Model.Expenses.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Reason</th>
                            <th class="text-end">Amount</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var expense in Model.Expenses)
                        {
                            <tr>
                                <td>@expense.Date.ToString("MMM dd, yyyy")</td>
                                <td><span class="badge bg-secondary">@expense.CategoryName</span></td>
                                <td>@expense.Reason</td>
                                <td class="text-end fw-bold">?@expense.Amount.ToString("N2")</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-2">No expenses found</p>
            </div>
        }
    </div>
</div>
