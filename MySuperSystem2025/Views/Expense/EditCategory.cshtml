@model MySuperSystem2025.Models.ViewModels.Expense.EditExpenseCategoryViewModel
@{
    ViewData["Title"] = "Edit Category";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-pencil me-2"></i>Edit Expense Category
            </div>
            <div class="card-body">
                <form asp-action="EditCategory" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="IsDefault" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    @if (Model.IsDefault)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>This is a default category. You can edit its name, description, and budget.
                        </div>
                    }

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Category Name</label>
                        <input asp-for="Name" class="form-control" maxlength="50" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description (Optional)</label>
                        <textarea asp-for="Description" class="form-control" rows="3" maxlength="200"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MonthlyFixedBudget" class="form-label">
                            <i class="bi bi-arrow-repeat text-info me-1"></i>Monthly Fixed Budget (&#8369;)
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">&#8369;</span>
                            <input asp-for="MonthlyFixedBudget" class="form-control" type="number" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="MonthlyFixedBudget" class="text-danger small"></span>
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>This budget <strong>resets automatically every month</strong>. 
                            Set to 0 to disable monthly reset.
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BudgetAmount" class="form-label">One-Time Budget Amount (&#8369;)</label>
                        <div class="input-group">
                            <span class="input-group-text">&#8369;</span>
                            <input asp-for="BudgetAmount" class="form-control" type="number" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="BudgetAmount" class="text-danger small"></span>
                        <small class="text-muted">
                            Set 0 for unlimited tracking. 
                            <strong>Note:</strong> Monthly Fixed Budget takes priority if set.
                        </small>
                    </div>

                    @if (Model.BudgetAmount > 0 || Model.MonthlyFixedBudget > 0)
                    {
                        var effectiveBudget = Model.MonthlyFixedBudget > 0 ? Model.MonthlyFixedBudget : Model.BudgetAmount;
                        var isLowBalance = Model.RemainingAmount <= effectiveBudget * 0.2m;
                        
                        <div class="alert @(isLowBalance ? "alert-warning" : "alert-success")">
                            <div class="row">
                                <div class="col-6">
                                    <strong>Total Spent (This Month):</strong><br />
                                    <span class="text-danger">&#8369;@Model.TotalExpenses.ToString("N2")</span>
                                </div>
                                <div class="col-6">
                                    <strong>Remaining:</strong><br />
                                    <span class="@(isLowBalance ? "text-warning fw-bold" : "text-success")">
                                        &#8369;@Model.RemainingAmount.ToString("N2")
                                    </span>
                                </div>
                            </div>
                            @if (Model.MonthlyFixedBudget > 0)
                            {
                                <hr />
                                <small class="text-info">
                                    <i class="bi bi-arrow-repeat me-1"></i>
                                    Monthly budget: &#8369;@Model.MonthlyFixedBudget.ToString("N2") (resets every month)
                                </small>
                            }
                            @if (isLowBalance)
                            {
                                <hr />
                                <small class="text-warning"><i class="bi bi-exclamation-triangle me-1"></i>Low balance warning!</small>
                            }
                        </div>
                    }

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>Update Category
                        </button>
                        <a asp-action="Categories" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
