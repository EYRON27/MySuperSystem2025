@model MySuperSystem2025.Models.ViewModels.Expense.ExpenseCategoryViewModel
@{
    ViewData["Title"] = "Delete Category";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone!
                </div>

                <h5 class="mb-3">Are you sure you want to delete this category?</h5>

                <div class="card bg-light mb-4">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-4 fw-bold">Name:</div>
                            <div class="col-8">@Model.Name</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 fw-bold">Description:</div>
                            <div class="col-8">@(Model.Description ?? "—")</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 fw-bold">Type:</div>
                            <div class="col-8">
                                @if (Model.IsDefault)
                                {
                                    <span class="badge bg-info">Default</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Custom</span>
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4 fw-bold">Expenses:</div>
                            <div class="col-8">
                                @if (Model.ExpenseCount > 0)
                                {
                                    <span class="badge bg-warning text-dark">@Model.ExpenseCount expense(s)</span>
                                }
                                else
                                {
                                    <span class="text-success">No expenses</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.ExpenseCount > 0)
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Note:</strong> This category has @Model.ExpenseCount associated expense(s). They will remain but be uncategorized after deletion.
                    </div>
                }

                <div class="d-flex gap-2 justify-content-end">
                    <a asp-action="Categories" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i>Cancel
                    </a>
                    <form asp-action="DeleteCategoryConfirmed" asp-route-id="@Model.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Delete Category
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
