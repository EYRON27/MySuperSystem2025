@model MySuperSystem2025.Models.ViewModels.Expense.ExpenseDashboardViewModel
@{
    ViewData["Title"] = "Expense Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 fw-bold"><i class="bi bi-wallet2 me-2"></i>Expense Dashboard</h1>
    <div>
        <a asp-action="Categories" class="btn btn-outline-secondary me-2">
            <i class="bi bi-tags me-1"></i>Categories
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Add Expense
        </a>
    </div>
</div>

<!-- Summary Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card stat-card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 opacity-75">Today</h6>
                        <h3 class="mb-0 fw-bold">&#8369;@Model.TodayTotal.ToString("N2")</h3>
                        <small class="opacity-75">@Model.TodayCount expenses</small>
                    </div>
                    <i class="bi bi-calendar-day fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 opacity-75">This Week</h6>
                        <h3 class="mb-0 fw-bold">&#8369;@Model.WeeklyTotal.ToString("N2")</h3>
                        <small class="opacity-75">@Model.WeeklyCount expenses</small>
                    </div>
                    <i class="bi bi-calendar-week fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 opacity-75">This Month</h6>
                        <h3 class="mb-0 fw-bold">&#8369;@Model.MonthlyTotal.ToString("N2")</h3>
                        <small class="opacity-75">@Model.MonthlyCount expenses</small>
                    </div>
                    <i class="bi bi-calendar-month fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card bg-warning text-dark">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 opacity-75">This Year</h6>
                        <h3 class="mb-0 fw-bold">&#8369;@Model.YearlyTotal.ToString("N2")</h3>
                        <small class="opacity-75">@Model.YearlyCount expenses</small>
                    </div>
                    <i class="bi bi-calendar fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Category Breakdown -->
    <div class="col-lg-4">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-pie-chart me-2"></i>Monthly by Category
            </div>
            <div class="card-body">
                @if (Model.CategoryBreakdown.Any())
                {
                    @foreach (var category in Model.CategoryBreakdown)
                    {
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span>@category.CategoryName</span>
                                <span class="fw-bold">&#8369;@category.Total.ToString("N2")</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar" role="progressbar" style="width: @category.Percentage%"></div>
                            </div>
                            <small class="text-muted">@category.Percentage% of total</small>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted text-center mb-0">No expenses this month</p>
                }
            </div>
        </div>
    </div>

    <!-- Recent Expenses -->
    <div class="col-lg-8">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-clock-history me-2"></i>Recent Expenses</span>
                <a asp-action="List" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body p-0">
                @if (Model.RecentExpenses.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Category</th>
                                    <th>Reason</th>
                                    <th class="text-end">Amount</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var expense in Model.RecentExpenses)
                                {
                                    <tr>
                                        <td>@expense.Date.ToString("MMM dd, yyyy")</td>
                                        <td><span class="badge bg-secondary">@expense.CategoryName</span></td>
                                        <td>@expense.Reason</td>
                                        <td class="text-end fw-bold">&#8369;@expense.Amount.ToString("N2")</td>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-2">No expenses recorded yet</p>
                        <a asp-action="Create" class="btn btn-primary">Add Your First Expense</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
