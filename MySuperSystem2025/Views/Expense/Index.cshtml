@model MySuperSystem2025.Models.ViewModels.Expense.ExpenseDashboardViewModel
@{
    ViewData["Title"] = "Expense Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 fw-bold"><i class="bi bi-wallet2 me-2"></i>Expense Dashboard</h1>
    <div>
        <a asp-action="Categories" class="btn btn-outline-secondary me-2">
            <i class="bi bi-tags me-1"></i>Categories
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Add Expense
        </a>
    </div>
</div>

<!-- Balance Overview Cards -->
@if (Model.TotalBudget > 0)
{
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card stat-card border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 text-primary">Total Budget</h6>
                            <h3 class="mb-0 fw-bold text-primary">&#8369;@Model.TotalBudget.ToString("N2")</h3>
                            <small class="text-muted">Across all categories</small>
                        </div>
                        <i class="bi bi-cash-stack fs-1 text-primary opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card border-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 text-danger">Total Spent</h6>
                            <h3 class="mb-0 fw-bold text-danger">&#8369;@Model.TotalExpenses.ToString("N2")</h3>
                            <small class="text-muted">All time expenses</small>
                        </div>
                        <i class="bi bi-credit-card fs-1 text-danger opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card @(Model.TotalRemainingBalance <= Model.TotalBudget * 0.2m ? "border-warning bg-warning bg-opacity-10" : "border-success")">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 @(Model.TotalRemainingBalance <= Model.TotalBudget * 0.2m ? "text-warning" : "text-success")">Remaining Balance</h6>
                            <h3 class="mb-0 fw-bold @(Model.TotalRemainingBalance <= Model.TotalBudget * 0.2m ? "text-warning" : "text-success")">&#8369;@Model.TotalRemainingBalance.ToString("N2")</h3>
                            <small class="text-muted">
                                @if (Model.TotalRemainingBalance <= Model.TotalBudget * 0.2m)
                                {
                                    <span class="text-warning"><i class="bi bi-exclamation-triangle me-1"></i>Low balance warning!</span>
                                }
                                else
                                {
                                    <span>Available to spend</span>
                                }
                            </small>
                        </div>
                        <i class="bi bi-wallet2 fs-1 @(Model.TotalRemainingBalance <= Model.TotalBudget * 0.2m ? "text-warning" : "text-success") opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Category Balance Cards -->
@if (Model.CategoryBalances.Any(c => c.HasBudget))
{
    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-graph-up me-2"></i>Category Balances
        </div>
        <div class="card-body">
            <div class="row g-3">
                @foreach (var category in Model.CategoryBalances.Where(c => c.HasBudget))
                {
                    <div class="col-md-4">
                        <div class="card h-100 @(category.IsLowBalance ? "border-warning" : "")">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="fw-bold mb-0">@category.CategoryName</h6>
                                    @if (category.IsLowBalance)
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-exclamation-triangle"></i> Low</span>
                                    }
                                </div>
                                <div class="mb-2">
                                    <small class="text-muted">Budget: &#8369;@category.BudgetAmount.ToString("N2")</small>
                                </div>
                                <div class="progress mb-2" style="height: 10px;">
                                    <div class="progress-bar @(category.UsagePercentage > 80 ? "bg-danger" : category.UsagePercentage > 50 ? "bg-warning" : "bg-success")" 
                                         role="progressbar" 
                                         style="width: @category.UsagePercentage%"
                                         aria-valuenow="@category.UsagePercentage" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <small class="text-danger">Spent: &#8369;@category.TotalExpenses.ToString("N2")</small>
                                    <small class="@(category.IsLowBalance ? "text-warning fw-bold" : "text-success")">
                                        Left: &#8369;@category.RemainingAmount.ToString("N2")
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- Summary Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card stat-card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 opacity-75">Today</h6>
                        <h3 class="mb-0 fw-bold">&#8369;@Model.TodayTotal.ToString("N2")</h3>
                        <small class="opacity-75">@Model.TodayCount expenses</small>
                    </div>
                    <i class="bi bi-calendar-day fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 opacity-75">This Week</h6>
                        <h3 class="mb-0 fw-bold">&#8369;@Model.WeeklyTotal.ToString("N2")</h3>
                        <small class="opacity-75">@Model.WeeklyCount expenses</small>
                    </div>
                    <i class="bi bi-calendar-week fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 opacity-75">This Month</h6>
                        <h3 class="mb-0 fw-bold">&#8369;@Model.MonthlyTotal.ToString("N2")</h3>
                        <small class="opacity-75">@Model.MonthlyCount expenses</small>
                    </div>
                    <i class="bi bi-calendar-month fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card bg-warning text-dark">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 opacity-75">This Year</h6>
                        <h3 class="mb-0 fw-bold">&#8369;@Model.YearlyTotal.ToString("N2")</h3>
                        <small class="opacity-75">@Model.YearlyCount expenses</small>
                    </div>
                    <i class="bi bi-calendar fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
<!-- Category Breakdown -->
<div class="col-lg-4">
    <div class="card h-100">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="bi bi-pie-chart me-2"></i>@Model.BreakdownPeriodName by Category</span>
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="breakdownPeriodDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-funnel me-1"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="breakdownPeriodDropdown">
                    <li><a class="dropdown-item @(Model.BreakdownPeriod == "daily" ? "active" : "")" asp-action="Index" asp-route-breakdown="daily">Today</a></li>
                    <li><a class="dropdown-item @(Model.BreakdownPeriod == "weekly" ? "active" : "")" asp-action="Index" asp-route-breakdown="weekly">This Week</a></li>
                    <li><a class="dropdown-item @(Model.BreakdownPeriod == "monthly" ? "active" : "")" asp-action="Index" asp-route-breakdown="monthly">This Month</a></li>
                    <li><a class="dropdown-item @(Model.BreakdownPeriod == "yearly" ? "active" : "")" asp-action="Index" asp-route-breakdown="yearly">This Year</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item @(Model.BreakdownPeriod == "alltime" ? "active" : "")" asp-action="Index" asp-route-breakdown="alltime">All Time</a></li>
                </ul>
            </div>
        </div>
        <div class="card-body">
            @if (Model.CategoryBreakdown.Any())
            {
                @foreach (var category in Model.CategoryBreakdown)
                {
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>@category.CategoryName</span>
                            <span class="fw-bold">&#8369;@category.Total.ToString("N2")</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar" role="progressbar" style="width: @category.Percentage%"></div>
                        </div>
                        <small class="text-muted">@category.Percentage% of total</small>
                    </div>
                }
            }
            else
            {
                <p class="text-muted text-center mb-0">No expenses for this period</p>
            }
        </div>
    </div>
</div>

    <!-- Recent Expenses -->
    <div class="col-lg-8">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-clock-history me-2"></i>Recent Expenses</span>
                <a asp-action="List" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body p-0">
                @if (Model.RecentExpenses.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Category</th>
                                    <th>Reason</th>
                                    <th class="text-end">Amount</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var expense in Model.RecentExpenses)
                                {
                                    <tr>
                                        <td>@expense.Date.ToString("MMM dd, yyyy")</td>
                                        <td><span class="badge bg-secondary">@expense.CategoryName</span></td>
                                        <td>@expense.Reason</td>
                                        <td class="text-end fw-bold">&#8369;@expense.Amount.ToString("N2")</td>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-2">No expenses recorded yet</p>
                        <a asp-action="Create" class="btn btn-primary">Add Your First Expense</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
