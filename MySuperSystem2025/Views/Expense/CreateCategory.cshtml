@model MySuperSystem2025.Models.ViewModels.Expense.CreateExpenseCategoryViewModel
@{
    ViewData["Title"] = "Create Category";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-plus-circle me-2"></i>Create Expense Category
            </div>
            <div class="card-body">
                <form asp-action="CreateCategory" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Category Name</label>
                        <input asp-for="Name" class="form-control" maxlength="50" placeholder="Enter category name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                        <small class="text-muted">Letters, numbers, and spaces only. Max 50 characters.</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description (Optional)</label>
                        <textarea asp-for="Description" class="form-control" rows="3" maxlength="200" placeholder="Enter description..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MonthlyFixedBudget" class="form-label">
                            <i class="bi bi-arrow-repeat text-info me-1"></i>Monthly Fixed Budget (&#8369;)
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">&#8369;</span>
                            <input asp-for="MonthlyFixedBudget" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                        </div>
                        <span asp-validation-for="MonthlyFixedBudget" class="text-danger small"></span>
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>This budget <strong>resets automatically every month</strong>. 
                            Leave 0 if you don't want monthly reset.
                        </small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="BudgetAmount" class="form-label">One-Time Budget Amount (&#8369;)</label>
                        <div class="input-group">
                            <span class="input-group-text">&#8369;</span>
                            <input asp-for="BudgetAmount" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                        </div>
                        <span asp-validation-for="BudgetAmount" class="text-danger small"></span>
                        <small class="text-muted">
                            Set a one-time budget (doesn't reset monthly). 
                            <strong>Note:</strong> If Monthly Fixed Budget is set, it will take priority.
                        </small>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-lightbulb me-2"></i>
                        <strong>Tip:</strong> For recurring monthly expenses (like bills, savings), use <strong>Monthly Fixed Budget</strong>.
                        The balance will automatically reset at the start of each month.
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>Create Category
                        </button>
                        <a asp-action="Categories" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
