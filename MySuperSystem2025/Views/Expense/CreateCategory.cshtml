@model MySuperSystem2025.Models.ViewModels.Expense.CreateExpenseCategoryViewModel
@{
    ViewData["Title"] = "Create Expense Category";
}

<link rel="stylesheet" href="~/css/unified-forms.css" />

<div class="form-container">
    <div class="page-header">
        <h1><i class="bi bi-tag me-2"></i>Create Expense Category</h1>
        <p class="text-muted mb-0">Add a new category for organizing expenses</p>
    </div>

    <div class="form-card">
        <form asp-action="CreateCategory" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Category Name</label>
                <input asp-for="Name" class="form-control" placeholder="e.g., Food, Transport, Entertainment..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description (Optional)</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Brief description of this category..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BudgetAmount" class="form-label">Budget Amount (&#8369;)</label>
                <input asp-for="BudgetAmount" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                <span asp-validation-for="BudgetAmount" class="text-danger"></span>
                <small class="text-muted d-block mt-1">Optional: Set a budget limit for this category</small>
            </div>

            <div class="mb-3">
                <label asp-for="MonthlyFixedBudget" class="form-label">Monthly Fixed Budget (&#8369;)</label>
                <input asp-for="MonthlyFixedBudget" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                <span asp-validation-for="MonthlyFixedBudget" class="text-danger"></span>
                <small class="text-muted d-block mt-1">Optional: Budget resets automatically every month</small>
            </div>

            <div class="info-box">
                <i class="bi bi-info-circle"></i>
                <small>If <strong>Monthly Fixed Budget</strong> is set, it will override the regular budget and reset automatically each month.</small>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>Create Category
                </button>
                <a asp-action="Categories" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
