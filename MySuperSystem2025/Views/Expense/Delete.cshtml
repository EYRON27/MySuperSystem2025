@model MySuperSystem2025.Models.ViewModels.Expense.ExpenseListItemViewModel
@{
    ViewData["Title"] = "Delete Expense";
}

@await Html.PartialAsync("_ConfirmationStyles")

<div class="confirm-container">
    <div class="confirm-header">
        <h1><i class="bi bi-trash me-2"></i>Delete Expense</h1>
        <p>Are you sure you want to delete this expense?</p>
    </div>

    <div class="confirm-card">
        <div class="confirm-card-body">
            <div class="confirm-warning">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Warning:</strong> This action cannot be undone. The amount will be refunded to the category balance.
            </div>

            <div class="confirm-details">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Date</dt>
                    <dd class="col-sm-8">@Model.Date.ToString("MMMM dd, yyyy")</dd>

                    <dt class="col-sm-4">Category</dt>
                    <dd class="col-sm-8"><span class="badge bg-secondary">@Model.CategoryName</span></dd>

                    <dt class="col-sm-4">Reason</dt>
                    <dd class="col-sm-8">@Model.Reason</dd>

                    <dt class="col-sm-4">Amount</dt>
                    <dd class="col-sm-8"><span class="text-danger fw-bold">?@Model.Amount.ToString("N2")</span></dd>
                </dl>
            </div>

            <div class="confirm-actions">
                <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger btn-confirm">
                        <i class="bi bi-trash me-1"></i>Delete Expense
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </div>
    </div>
</div>
