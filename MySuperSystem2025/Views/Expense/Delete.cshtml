@model MySuperSystem2025.Models.ViewModels.Expense.ExpenseListItemViewModel
@{
    ViewData["Title"] = "Delete Expense";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone!
                </div>

                <h5 class="mb-3">Are you sure you want to delete this expense?</h5>

                <div class="card bg-light mb-4">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-4 fw-bold">Date:</div>
                            <div class="col-8">@Model.Date.ToString("MMMM dd, yyyy")</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 fw-bold">Category:</div>
                            <div class="col-8"><span class="badge bg-secondary">@Model.CategoryName</span></div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 fw-bold">Reason:</div>
                            <div class="col-8">@Model.Reason</div>
                        </div>
                        <div class="row">
                            <div class="col-4 fw-bold">Amount:</div>
                            <div class="col-8 text-danger fw-bold">&#8369;@Model.Amount.ToString("N2")</div>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2 justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i>Cancel
                    </a>
                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Delete Expense
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
