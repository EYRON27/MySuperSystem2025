@model MySuperSystem2025.Models.ViewModels.Task.CreateTaskViewModel
@{
    ViewData["Title"] = "Create Task";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-plus-circle me-2"></i>Create New Task
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Task Title</label>
                        <input asp-for="Title" class="form-control" maxlength="100" placeholder="Enter task title" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                        <small class="text-muted">Maximum 100 characters</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description (Optional)</label>
                        <textarea asp-for="Description" class="form-control" rows="4" maxlength="300" placeholder="Enter task description..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                        <small class="text-muted">Maximum 300 characters</small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Deadline" class="form-label">Deadline (Optional)</label>
                        <input asp-for="Deadline" class="form-control" type="datetime-local" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                        <span asp-validation-for="Deadline" class="text-danger small"></span>
                        <small class="text-muted">Deadline cannot be in the past</small>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>Create Task
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
