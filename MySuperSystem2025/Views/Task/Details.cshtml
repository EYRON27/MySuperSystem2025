@model MySuperSystem2025.Models.ViewModels.Task.EditTaskViewModel
@{
    ViewData["Title"] = "Task Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-info-circle me-2"></i>Task Details</span>
                <span class="badge @(Model.Status == MySuperSystem2025.Models.Domain.TaskStatus.Completed ? "bg-success" : Model.Status == MySuperSystem2025.Models.Domain.TaskStatus.Ongoing ? "bg-primary" : "bg-secondary")">
                    @(Model.Status == MySuperSystem2025.Models.Domain.TaskStatus.Completed ? "Completed" : Model.Status == MySuperSystem2025.Models.Domain.TaskStatus.Ongoing ? "Ongoing" : "To Do")
                </span>
            </div>
            <div class="card-body">
                @if (Model.IsCompleted)
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>This task is completed and cannot be edited.
                    </div>
                }

                <div class="mb-3">
                    <label class="form-label fw-bold">Title</label>
                    <p class="mb-0">@Model.Title</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">Description</label>
                        <p class="mb-0">@Model.Description</p>
                    </div>
                }

                @if (Model.Deadline.HasValue)
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">Deadline</label>
                        <p class="mb-0">@Model.Deadline?.ToString("MMMM dd, yyyy hh:mm tt")</p>
                    </div>
                }

                <div class="d-flex gap-2">
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-left me-1"></i>Back to Tasks
                    </a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this task?');">
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="bi bi-trash me-1"></i>Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
