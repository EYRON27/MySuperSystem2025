    </div>

    <!-- Ongoing -->
    <div class="col-lg-4">
        <div class="card h-100 task-column" data-status="@((int)TaskStatus.Ongoing)">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-arrow-repeat me-2"></i>Ongoing (@Model.OngoingTasks.Count)
            </div>
            <div class="card-body p-0 drop-zone" data-status="@((int)TaskStatus.Ongoing)">
                @if (Model.OngoingTasks.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var task in Model.OngoingTasks)
                        {
                            <li class="list-group-item task-item @(task.IsOverdue ? "list-group-item-danger" : "")" draggable="true" data-task-id="@task.Id" data-task-status="@((int)task.Status)">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">
                                            <i class="bi bi-grip-vertical me-1 text-muted drag-hint"></i>
                                            @task.Title
                                        </h6>
                                        @if (task.Deadline.HasValue)
                                        {
                                            <small class="text-muted">
                                                <i class="bi bi-calendar me-1"></i>@task.Deadline?.ToString("MMM dd, yyyy hh:mm tt")
