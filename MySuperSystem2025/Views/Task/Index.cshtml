@model MySuperSystem2025.Models.ViewModels.Task.TaskDashboardViewModel
@using TaskStatus = MySuperSystem2025.Models.Domain.TaskStatus
@{
    ViewData["Title"] = "Task Manager";
}

<link rel="stylesheet" href="~/css/unified-dashboard.css" asp-append-version="true" />

<style>
    /* Drag & Drop Styles */
    .task-item {
        cursor: grab;
        transition: all 0.2s ease;
    }
    
    .task-item:active {
        cursor: grabbing;
    }
    
    .task-item.dragging {
        opacity: 0.5;
        transform: scale(0.98);
    }
    
    .task-column.drag-over {
        background-color: rgba(37, 99, 235, 0.05);
        border-color: #2563eb !important;
    }
    
    .drop-zone {
        padding: 1rem;
        min-height: 100px;
        transition: all 0.2s ease;
    }
    
    .drop-zone.drag-over {
        background-color: rgba(37, 99, 235, 0.05);
    }
    
    .task-item.completed-task {
        cursor: default;
        opacity: 0.7;
    }
    
    .task-item.completed-task .item-title {
        text-decoration: line-through;
    }
</style>

<div class="dashboard-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h1><i class="bi bi-check2-square me-2"></i>Task Manager</h1>
                <p class="text-muted mb-0">Organize and track your tasks with drag-and-drop simplicity</p>
            </div>
            <div class="action-buttons">
                <a asp-action="ExportPdf" class="btn btn-outline-secondary" title="Export to PDF">
                    <i class="bi bi-file-earmark-pdf me-1"></i>Export PDF
                </a>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>New Task
                </a>
            </div>
        </div>
    </div>

    <!-- Drag & Drop Hint -->
    <div class="info-notice">
        <i class="bi bi-arrows-move"></i>
        <div>
            <strong>Tip:</strong> Drag and drop tasks between columns to change their status.
        </div>
        <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <!-- Summary Cards -->
    <div class="summary-grid">
        <div class="summary-card">
            <div class="summary-label">To Do</div>
            <div class="summary-value">@Model.PendingCount</div>
            <div class="summary-count">@(Model.PendingCount == 1 ? "task" : "tasks") pending</div>
        </div>
        <div class="summary-card">
            <div class="summary-label">Ongoing</div>
            <div class="summary-value">@Model.OngoingCount</div>
            <div class="summary-count">@(Model.OngoingCount == 1 ? "task" : "tasks") in progress</div>
        </div>
        <div class="summary-card">
            <div class="summary-label">Completed</div>
            <div class="summary-value">@Model.CompletedCount</div>
            <div class="summary-count">@(Model.CompletedCount == 1 ? "task" : "tasks") done</div>
        </div>
        <div class="summary-card" style="border-left: 3px solid @(Model.OverdueCount > 0 ? "#dc2626" : "#e5e7eb");">
            <div class="summary-label @(Model.OverdueCount > 0 ? "text-danger" : "")">Overdue</div>
            <div class="summary-value @(Model.OverdueCount > 0 ? "text-danger" : "")">@Model.OverdueCount</div>
            <div class="summary-count">
                @if (Model.OverdueCount > 0)
                {
                    <span class="text-danger"><i class="bi bi-exclamation-triangle me-1"></i>Needs attention</span>
                }
                else
                {
                    <span>All on track</span>
                }
            </div>
        </div>
    </div>

    <!-- Overdue Tasks Section -->
    @if (Model.OverdueTasks.Any())
    {
        <div class="main-card" style="border-left: 3px solid #dc2626; background-color: #fef2f2;">
            <div class="card-header-unified">
                <h5 class="card-title text-danger">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Overdue Tasks (@Model.OverdueTasks.Count)
                </h5>
            </div>
            <ul class="item-list">
                @foreach (var task in Model.OverdueTasks)
                {
                    <li class="item-list-entry task-item" draggable="true" data-task-id="@task.Id" data-task-status="@((int)task.Status)">
                        <div class="item-header">
                            <div style="flex: 1;">
                                <div class="item-title">
                                    <i class="bi bi-grip-vertical me-1 text-muted" style="font-size: 0.75rem;"></i>
                                    @task.Title
                                </div>
                                @if (task.Deadline.HasValue)
                                {
                                    <div class="item-meta text-danger">
                                        <i class="bi bi-calendar-x me-1"></i>Due: @task.Deadline?.ToString("MMM dd, yyyy hh:mm tt")
                                    </div>
                                }
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @if (task.Status == TaskStatus.ToDo)
                                    {
                                        <li>
                                            <form asp-action="UpdateStatus" method="post">
                                                <input type="hidden" name="id" value="@task.Id" />
                                                <input type="hidden" name="status" value="@((int)TaskStatus.Ongoing)" />
                                                <button type="submit" class="dropdown-item">Start Task</button>
                                            </form>
                                        </li>
                                    }
                                    <li>
                                        <form asp-action="UpdateStatus" method="post">
                                            <input type="hidden" name="id" value="@task.Id" />
                                            <input type="hidden" name="status" value="@((int)TaskStatus.Completed)" />
                                            <button type="submit" class="dropdown-item text-success">Complete</button>
                                        </form>
                                    </li>
                                    <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@task.Id">Edit</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@task.Id">Delete</a></li>
                                </ul>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    }

    <!-- Task Columns -->
    <div class="row g-4">
        <!-- To Do Column -->
        <div class="col-lg-4">
            <div class="task-column" data-status="@((int)TaskStatus.ToDo)">
                <div class="task-column-header" style="background-color: #f3f4f6; color: #1a1a1a;">
                    <i class="bi bi-list-task me-2"></i>To Do (@Model.ToDoTasks.Count)
                </div>
                <div class="drop-zone" data-status="@((int)TaskStatus.ToDo)">
                    @if (Model.ToDoTasks.Any())
                    {
                        <ul class="item-list">
                            @foreach (var task in Model.ToDoTasks)
                            {
                                <li class="item-list-entry task-item @(task.IsOverdue ? "border-start border-danger border-3" : "")" draggable="true" data-task-id="@task.Id" data-task-status="@((int)task.Status)">
                                    <div class="item-header">
                                        <div style="flex: 1;">
                                            <div class="item-title">
                                                <i class="bi bi-grip-vertical me-1 text-muted" style="font-size: 0.75rem;"></i>
                                                @task.Title
                                            </div>
                                            @if (task.Deadline.HasValue)
                                            {
                                                <div class="item-meta @(task.IsOverdue ? "text-danger" : "")">
                                                    <i class="bi bi-calendar me-1"></i>@task.Deadline?.ToString("MMM dd, yyyy")
                                                </div>
                                            }
                                        </div>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                <i class="bi bi-three-dots"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li>
                                                    <form asp-action="UpdateStatus" method="post">
                                                        <input type="hidden" name="id" value="@task.Id" />
                                                        <input type="hidden" name="status" value="@((int)TaskStatus.Ongoing)" />
                                                        <button type="submit" class="dropdown-item">Start Task</button>
                                                    </form>
                                                </li>
                                                <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@task.Id">Edit</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@task.Id">Delete</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <p>No tasks - drag tasks here</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Ongoing Column -->
        <div class="col-lg-4">
            <div class="task-column" data-status="@((int)TaskStatus.Ongoing)">
                <div class="task-column-header" style="background-color: #dbeafe; color: #1e40af;">
                    <i class="bi bi-arrow-repeat me-2"></i>Ongoing (@Model.OngoingTasks.Count)
                </div>
                <div class="drop-zone" data-status="@((int)TaskStatus.Ongoing)">
                    @if (Model.OngoingTasks.Any())
                    {
                        <ul class="item-list">
                            @foreach (var task in Model.OngoingTasks)
                            {
                                <li class="item-list-entry task-item @(task.IsOverdue ? "border-start border-danger border-3" : "")" draggable="true" data-task-id="@task.Id" data-task-status="@((int)task.Status)">
                                    <div class="item-header">
                                        <div style="flex: 1;">
                                            <div class="item-title">
                                                <i class="bi bi-grip-vertical me-1 text-muted" style="font-size: 0.75rem;"></i>
                                                @task.Title
                                            </div>
                                            @if (task.Deadline.HasValue)
                                            {
                                                <div class="item-meta @(task.IsOverdue ? "text-danger" : "")">
                                                    <i class="bi bi-calendar me-1"></i>@task.Deadline?.ToString("MMM dd, yyyy")
                                                </div>
                                            }
                                        </div>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                <i class="bi bi-three-dots"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li>
                                                    <form asp-action="UpdateStatus" method="post">
                                                        <input type="hidden" name="id" value="@task.Id" />
                                                        <input type="hidden" name="status" value="@((int)TaskStatus.Completed)" />
                                                        <button type="submit" class="dropdown-item text-success">Complete</button>
                                                    </form>
                                                </li>
                                                <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@task.Id">Edit</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@task.Id">Delete</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <p>No tasks - drag tasks here</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Completed Column -->
        <div class="col-lg-4">
            <div class="task-column" data-status="@((int)TaskStatus.Completed)">
                <div class="task-column-header" style="background-color: #dcfce7; color: #166534;">
                    <i class="bi bi-check-circle me-2"></i>Completed (@Model.CompletedTasks.Count)
                </div>
                <div class="drop-zone" data-status="@((int)TaskStatus.Completed)">
                    @if (Model.CompletedTasks.Any())
                    {
                        <ul class="item-list">
                            @foreach (var task in Model.CompletedTasks)
                            {
                                <li class="item-list-entry task-item completed-task" data-task-id="@task.Id" data-task-status="@((int)task.Status)">
                                    <div class="item-header">
                                        <div style="flex: 1;">
                                            <div class="item-title text-muted">@task.Title</div>
                                            @if (task.CompletedAt.HasValue)
                                            {
                                                <div class="item-meta">
                                                    <i class="bi bi-check me-1"></i>@task.CompletedAt?.ToString("MMM dd, yyyy")
                                                </div>
                                            }
                                        </div>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                <i class="bi bi-three-dots"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li><a class="dropdown-item" asp-action="Details" asp-route-id="@task.Id">View Details</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@task.Id">Delete</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <p>No completed tasks</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const taskItems = document.querySelectorAll('.task-item:not(.completed-task)');
            const dropZones = document.querySelectorAll('.drop-zone');
            
            let draggedItem = null;
            
            taskItems.forEach(item => {
                item.addEventListener('dragstart', function(e) {
                    draggedItem = this;
                    this.classList.add('dragging');
                    e.dataTransfer.effectAllowed = 'move';
                    e.dataTransfer.setData('text/plain', this.dataset.taskId);
                });
                
                item.addEventListener('dragend', function() {
                    this.classList.remove('dragging');
                    dropZones.forEach(zone => {
                        zone.classList.remove('drag-over');
                        zone.closest('.task-column')?.classList.remove('drag-over');
                    });
                    draggedItem = null;
                });
            });
            
            dropZones.forEach(zone => {
                zone.addEventListener('dragover', function(e) {
                    e.preventDefault();
                    e.dataTransfer.dropEffect = 'move';
                    this.classList.add('drag-over');
                    this.closest('.task-column')?.classList.add('drag-over');
                });
                
                zone.addEventListener('dragleave', function(e) {
                    if (!this.contains(e.relatedTarget)) {
                        this.classList.remove('drag-over');
                        this.closest('.task-column')?.classList.remove('drag-over');
                    }
                });
                
                zone.addEventListener('drop', function(e) {
                    e.preventDefault();
                    this.classList.remove('drag-over');
                    this.closest('.task-column')?.classList.remove('drag-over');
                    
                    if (!draggedItem) return;
                    
                    const taskId = parseInt(draggedItem.dataset.taskId);
                    const newStatus = parseInt(this.dataset.status);
                    const currentStatus = parseInt(draggedItem.dataset.taskStatus);
                    
                    if (currentStatus === newStatus) return;
                    
                    updateTaskStatus(taskId, newStatus);
                });
            });
            
            function updateTaskStatus(taskId, newStatus) {
                fetch('/Task/UpdateStatusAjax', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        id: taskId,
                        status: newStatus
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Failed to update task: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while updating the task.');
                });
            }
        });
    </script>
}

