@model MySuperSystem2025.Models.ViewModels.Task.TaskDashboardViewModel
@using TaskStatus = MySuperSystem2025.Models.Domain.TaskStatus
@{
    ViewData["Title"] = "Task Manager";
}

<style>
    /* Drag & Drop Styles */
    .task-column {
        min-height: 200px;
    }
    
    .task-item {
        cursor: grab;
        transition: all 0.2s ease;
    }
    
    .task-item:active {
        cursor: grabbing;
    }
    
    .task-item.dragging {
        opacity: 0.5;
        transform: scale(0.98);
    }
    
    .task-column.drag-over {
        background-color: rgba(0, 123, 255, 0.1);
        border: 2px dashed #007bff !important;
    }
    
    .drop-zone {
        padding: 1rem;
        min-height: 100px;
        transition: all 0.2s ease;
    }
    
    .drop-zone.drag-over {
        background-color: rgba(0, 123, 255, 0.05);
    }
    
    .task-item.completed-task {
        cursor: default;
    }
    
    .drag-hint {
        font-size: 0.75rem;
        opacity: 0.7;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 fw-bold"><i class="bi bi-check2-square me-2"></i>Task Manager</h1>
    <div>
        <a asp-action="ExportPdf" class="btn btn-outline-danger me-2" title="Export to PDF">
            <i class="bi bi-file-earmark-pdf me-1"></i>Export PDF
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>New Task
        </a>
    </div>
</div>

<!-- Drag & Drop Hint -->
<div class="alert alert-info alert-dismissible fade show mb-4" role="alert">
    <i class="bi bi-arrows-move me-2"></i>
    <strong>Tip:</strong> Drag and drop tasks between columns to change their status.
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<!-- Summary Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card stat-card bg-secondary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 opacity-75">To Do</h6>
                        <h3 class="mb-0 fw-bold">@Model.PendingCount</h3>
                    </div>
                    <i class="bi bi-list-task fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 opacity-75">Ongoing</h6>
                        <h3 class="mb-0 fw-bold">@Model.OngoingCount</h3>
                    </div>
                    <i class="bi bi-arrow-repeat fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 opacity-75">Completed</h6>
                        <h3 class="mb-0 fw-bold">@Model.CompletedCount</h3>
                    </div>
                    <i class="bi bi-check-circle fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card bg-danger text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 opacity-75">Overdue</h6>
                        <h3 class="mb-0 fw-bold">@Model.OverdueCount</h3>
                    </div>
                    <i class="bi bi-exclamation-triangle fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.OverdueTasks.Any())
{
    <!-- Overdue Tasks Section -->
    <div class="card mb-4 border-danger">
        <div class="card-header bg-danger text-white">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>Overdue Tasks (@Model.OverdueTasks.Count)
        </div>
        <div class="card-body p-0">
            <ul class="list-group list-group-flush">
                @foreach (var task in Model.OverdueTasks)
                {
                    <li class="list-group-item list-group-item-danger task-item" draggable="true" data-task-id="@task.Id" data-task-status="@((int)task.Status)">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="mb-1">
                                    <i class="bi bi-grip-vertical me-1 text-muted drag-hint"></i>
                                    @task.Title
                                </h6>
                                @if (task.Deadline.HasValue)
                                {
                                    <small class="text-danger">
                                        <i class="bi bi-calendar-x me-1"></i>Due: @task.Deadline?.ToString("MMM dd, yyyy hh:mm tt")
                                    </small>
                                }
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @if (task.Status == TaskStatus.ToDo)
                                    {
                                        <li>
                                            <form asp-action="UpdateStatus" method="post">
                                                <input type="hidden" name="id" value="@task.Id" />
                                                <input type="hidden" name="status" value="@((int)TaskStatus.Ongoing)" />
                                                <button type="submit" class="dropdown-item">Start Task</button>
                                            </form>
                                        </li>
                                    }
                                    <li>
                                        <form asp-action="UpdateStatus" method="post">
                                            <input type="hidden" name="id" value="@task.Id" />
                                            <input type="hidden" name="status" value="@((int)TaskStatus.Completed)" />
                                            <button type="submit" class="dropdown-item text-success">Complete</button>
                                        </form>
                                    </li>
                                    <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@task.Id">Edit</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
}

<div class="row g-4">
    <!-- To Do -->
    <div class="col-lg-4">
        <div class="card h-100 task-column" data-status="@((int)TaskStatus.ToDo)">
            <div class="card-header bg-secondary text-white">
                <i class="bi bi-list-task me-2"></i>To Do (@Model.ToDoTasks.Count)
            </div>
            <div class="card-body p-0 drop-zone" data-status="@((int)TaskStatus.ToDo)">
                @if (Model.ToDoTasks.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var task in Model.ToDoTasks)
                        {
                            <li class="list-group-item task-item @(task.IsOverdue ? "list-group-item-danger" : "")" draggable="true" data-task-id="@task.Id" data-task-status="@((int)task.Status)">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">
                                            <i class="bi bi-grip-vertical me-1 text-muted drag-hint"></i>
                                            @task.Title
                                        </h6>
                                        @if (task.Deadline.HasValue)
                                        {
                                            <small class="text-muted">
                                                <i class="bi bi-calendar me-1"></i>@task.Deadline?.ToString("MMM dd, yyyy hh:mm tt")
                                            </small>
                                        }
                                    </div>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <form asp-action="UpdateStatus" method="post">
                                                    <input type="hidden" name="id" value="@task.Id" />
                                                    <input type="hidden" name="status" value="@((int)TaskStatus.Ongoing)" />
                                                    <button type="submit" class="dropdown-item">Start Task</button>
                                                </form>
                                            </li>
                                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@task.Id">Edit</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
