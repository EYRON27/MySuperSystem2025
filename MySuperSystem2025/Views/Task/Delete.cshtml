@model MySuperSystem2025.Models.ViewModels.Task.EditTaskViewModel
@{
    ViewData["Title"] = "Delete Task";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone!
                </div>

                <h5 class="mb-3">Are you sure you want to delete this task?</h5>

                <div class="card bg-light mb-4">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-4 fw-bold">Title:</div>
                            <div class="col-8">@Model.Title</div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="row mb-2">
                                <div class="col-4 fw-bold">Description:</div>
                                <div class="col-8">@Model.Description</div>
                            </div>
                        }
                        <div class="row mb-2">
                            <div class="col-4 fw-bold">Status:</div>
                            <div class="col-8">
                                <span class="badge @(Model.Status == MySuperSystem2025.Models.Domain.TaskStatus.Completed ? "bg-success" : Model.Status == MySuperSystem2025.Models.Domain.TaskStatus.Ongoing ? "bg-primary" : "bg-secondary")">
                                    @(Model.Status == MySuperSystem2025.Models.Domain.TaskStatus.Completed ? "Completed" : Model.Status == MySuperSystem2025.Models.Domain.TaskStatus.Ongoing ? "Ongoing" : "To Do")
                                </span>
                            </div>
                        </div>
                        @if (Model.Deadline.HasValue)
                        {
                            <div class="row">
                                <div class="col-4 fw-bold">Deadline:</div>
                                <div class="col-8">@Model.Deadline?.ToString("MMMM dd, yyyy hh:mm tt")</div>
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex gap-2 justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i>Cancel
                    </a>
                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Delete Task
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
