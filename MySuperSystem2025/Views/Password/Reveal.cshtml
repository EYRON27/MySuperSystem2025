@model MySuperSystem2025.Models.ViewModels.Password.RevealPasswordViewModel
@{
    ViewData["Title"] = "Reveal Password";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-shield-lock me-2"></i>Verify Your Identity
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    For security, please enter <strong>your account password</strong> (the one you use to login) to reveal the stored password.
                </div>

                <form asp-action="Reveal" method="post">
                    <input type="hidden" asp-for="PasswordId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="AccountPassword" class="form-label">Your Account Password</label>
                        <input asp-for="AccountPassword" class="form-control" autofocus />
                        <span asp-validation-for="AccountPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-eye me-1"></i>Reveal Password
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
