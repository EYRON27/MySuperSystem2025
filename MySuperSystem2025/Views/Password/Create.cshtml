@model MySuperSystem2025.Models.ViewModels.Password.CreatePasswordViewModel
@{
    ViewData["Title"] = "Store Password";
}

<link rel="stylesheet" href="~/css/unified-forms.css" />

<div class="form-container">
    <div class="page-header">
        <h1><i class="bi bi-shield-lock me-2"></i>Store New Password</h1>
        <p class="text-muted mb-0">Securely save your credentials</p>
    </div>

    <div class="form-card">
        <div class="info-box">
            <i class="bi bi-shield-check"></i>
            <small>Your password will be encrypted using <strong>AES-256</strong> encryption before storage.</small>
        </div>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="WebsiteOrAppName" class="form-label">Website / Application</label>
                <input asp-for="WebsiteOrAppName" class="form-control" placeholder="e.g., Facebook, Gmail, GitHub..." />
                <span asp-validation-for="WebsiteOrAppName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username / Email</label>
                <input asp-for="Username" class="form-control" placeholder="Enter username or email..." />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password..." />
                <span asp-validation-for="Password" class="text-danger"></span>
                <small class="text-muted d-block mt-1">Minimum 8 characters</small>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Category</label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
                    <option value="">Select a category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label">Notes (Optional)</label>
                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional information..."></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>Save Password
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
