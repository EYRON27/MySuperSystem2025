@model MySuperSystem2025.Models.ViewModels.Password.PasswordCategoryViewModel
@{
    ViewData["Title"] = "Delete Category";
}

@await Html.PartialAsync("_ConfirmationStyles")

<div class="confirm-container">
    <div class="confirm-header">
        <h1><i class="bi bi-trash me-2"></i>Delete Category</h1>
        <p>Are you sure you want to delete this password category?</p>
    </div>

    <div class="confirm-card">
        <div class="confirm-card-body">
            <div class="confirm-warning">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Warning:</strong> This action cannot be undone!
            </div>

            <div class="confirm-details">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8 fw-bold">@Model.Name</dd>

                    <dt class="col-sm-4">Description</dt>
                    <dd class="col-sm-8">@(Model.Description ?? "No description")</dd>

                    <dt class="col-sm-4">Type</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsDefault)
                        {
                            <span class="badge bg-info">Default</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Custom</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Passwords</dt>
                    <dd class="col-sm-8">
                        @if (Model.PasswordCount > 0)
                        {
                            <span class="badge bg-warning text-dark">@Model.PasswordCount password(s)</span>
                        }
                        else
                        {
                            <span class="text-success">No passwords</span>
                        }
                    </dd>
                </dl>
            </div>

            @if (Model.PasswordCount > 0)
            {
                <div style="background: #fef2f2; border: 1px solid #fecaca; border-radius: 6px; padding: 0.875rem 1rem; margin-top: 1rem; font-size: 0.875rem; color: #991b1b;">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Note:</strong> This category has @Model.PasswordCount associated password(s). They will remain but be uncategorized after deletion.
                </div>
            }

            <div class="confirm-actions">
                <form asp-action="DeleteCategoryConfirmed" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger btn-confirm">
                        <i class="bi bi-trash me-1"></i>Delete Category
                    </button>
                </form>
                <a asp-action="Categories" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </div>
    </div>
</div>
