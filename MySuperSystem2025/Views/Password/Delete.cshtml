@model MySuperSystem2025.Models.ViewModels.Password.PasswordListItemViewModel
@{
    ViewData["Title"] = "Delete Password";
}

@await Html.PartialAsync("_ConfirmationStyles")

<div class="confirm-container">
    <div class="confirm-header">
        <h1><i class="bi bi-trash me-2"></i>Delete Password</h1>
        <p>Are you sure you want to delete this stored password?</p>
    </div>

    <div class="confirm-card">
        <div class="confirm-card-body">
            <div class="confirm-warning">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Warning:</strong> This action cannot be undone. The encrypted password will be permanently removed.
            </div>

            <div class="confirm-details">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Website/App</dt>
                    <dd class="col-sm-8 fw-bold">@Model.WebsiteOrAppName</dd>

                    @if (!string.IsNullOrEmpty(Model.WebsiteUrl))
                    {
                        <dt class="col-sm-4">URL</dt>
                        <dd class="col-sm-8">
                            <a href="@Model.WebsiteUrl" target="_blank" class="text-decoration-none">
                                <i class="bi bi-box-arrow-up-right me-1"></i>@Model.WebsiteUrl
                            </a>
                        </dd>
                    }

                    <dt class="col-sm-4">Username</dt>
                    <dd class="col-sm-8">@Model.Username</dd>

                    <dt class="col-sm-4">Password</dt>
                    <dd class="col-sm-8"><span class="text-muted">@Model.MaskedPassword</span></dd>

                    <dt class="col-sm-4">Category</dt>
                    <dd class="col-sm-8"><span class="badge bg-secondary">@Model.CategoryName</span></dd>
                </dl>
            </div>

            <div style="background: #f0f9ff; border: 1px solid #bfdbfe; border-radius: 6px; padding: 0.875rem 1rem; margin-top: 1rem; font-size: 0.875rem; color: #1e40af;">
                <i class="bi bi-shield-lock me-2"></i>
                <strong>Security Note:</strong> This will permanently delete the encrypted credentials from secure storage.
            </div>

            <div class="confirm-actions">
                <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger btn-confirm">
                        <i class="bi bi-trash me-1"></i>Delete Password
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </div>
    </div>
</div>
