@model MySuperSystem2025.Models.ViewModels.Password.PasswordDashboardViewModel
@{
    ViewData["Title"] = "Password Manager";
}

<link rel="stylesheet" href="~/css/unified-dashboard.css" asp-append-version="true" />

<div class="dashboard-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h1><i class="bi bi-shield-lock me-2"></i>Password Vault</h1>
                <p class="text-muted mb-0">Securely store and manage passwords with AES-256 encryption</p>
            </div>
            <div class="action-buttons">
                <a asp-action="ExportPdf" asp-route-categoryId="@Model.FilterCategoryId" asp-route-search="@Model.SearchTerm" class="btn btn-outline-secondary" title="Export to PDF">
                    <i class="bi bi-file-earmark-pdf me-1"></i>Export PDF
                </a>
                <a asp-action="Categories" class="btn btn-outline-secondary">
                    <i class="bi bi-tags me-1"></i>Categories
                </a>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Add Password
                </a>
            </div>
        </div>
    </div>

    <!-- Security Notice -->
    <div class="info-notice">
        <i class="bi bi-shield-check"></i>
        <div>
            <strong>Your passwords are encrypted</strong> using AES-256 encryption. To view a password, you'll need to re-enter your account password.
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="filter-section">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-5">
                <label class="form-label fw-bold"><i class="bi bi-search me-2"></i>Search</label>
                <input type="text" name="search" class="form-control" placeholder="Search by website, username, or notes..." value="@Model.SearchTerm" />
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold"><i class="bi bi-funnel me-2"></i>Category</label>
                <select name="categoryId" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id" selected="@(Model.FilterCategoryId == category.Id)">@category.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-1"></i>Search
                </button>
            </div>
            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </form>
    </div>

    <!-- Password List -->
    <div class="main-card">
        <div class="card-header-unified">
            <h5 class="card-title"><i class="bi bi-list-ul me-2"></i>Stored Passwords</h5>
            <span class="badge badge-unified bg-primary">@Model.TotalPasswords total</span>
        </div>

        @if (Model.Passwords.Any())
        {
            <div class="table-responsive">
                <table class="table table-unified">
                    <thead>
                        <tr>
                            <th>Website / App</th>
                            <th>Username</th>
                            <th>Password</th>
                            <th>Category</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var password in Model.Passwords)
                        {
                            <tr>
                                <td>
                                    <div class="fw-bold text-dark">@password.WebsiteOrAppName</div>
                                    @if (!string.IsNullOrEmpty(password.WebsiteUrl))
                                    {
                                        <small class="item-meta">
                                            <a href="@password.WebsiteUrl" target="_blank" class="text-decoration-none">
                                                <i class="bi bi-box-arrow-up-right me-1"></i>@password.WebsiteUrl
                                            </a>
                                        </small>
                                    }
                                </td>
                                <td class="fw-medium">@password.Username</td>
                                <td>
                                    <span class="text-muted font-monospace">@password.MaskedPassword</span>
                                    <a asp-action="Reveal" asp-route-id="@password.Id" class="btn btn-sm btn-outline-secondary ms-2" title="Reveal Password">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                                <td>
                                    <span class="badge badge-unified bg-secondary">@password.CategoryName</span>
                                </td>
                                <td>
                                    <div class="btn-group-unified justify-content-center">
                                        <a asp-action="Edit" asp-route-id="@password.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@password.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-shield-lock"></i>
                <p>No passwords stored yet</p>
                <a asp-action="Create" class="btn btn-primary">Store Your First Password</a>
            </div>
        }
    </div>
</div>
