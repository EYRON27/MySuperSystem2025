@model MySuperSystem2025.Models.ViewModels.Password.PasswordDashboardViewModel
@{
    ViewData["Title"] = "Password Manager";
}

<style>
    .password-dashboard {
        max-width: 1400px;
        margin: 0 auto;
    }
    
    .page-header {
        margin-bottom: 2rem;
    }
    
    .page-header h1 {
        font-size: 1.75rem;
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 0.5rem;
    }
    
    .security-notice {
        background: #eff6ff;
        border: 1px solid #bfdbfe;
        border-radius: 8px;
        padding: 1rem 1.25rem;
        margin-bottom: 1.5rem;
        color: #1e40af;
        font-size: 0.875rem;
    }
    
    .filter-card {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }
    
    .main-card {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        padding: 1.75rem;
    }
    
    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }
    
    .card-title {
        font-size: 1rem;
        font-weight: 600;
        color: #1a1a1a;
    }
    
    .password-table {
        width: 100%;
        border-collapse: collapse;
    }
    
    .password-table th {
        font-size: 0.875rem;
        font-weight: 500;
        color: #6c757d;
        padding: 0.75rem 1rem;
        text-align: left;
        border-bottom: 1px solid #e5e7eb;
    }
    
    .password-table td {
        padding: 1rem;
        border-bottom: 1px solid #f3f4f6;
        font-size: 0.875rem;
    }
    
    .password-table tr:last-child td {
        border-bottom: none;
    }
    
    .password-table tr:hover {
        background: #f9fafb;
    }
    
    .password-name {
        font-weight: 500;
        color: #1a1a1a;
        margin-bottom: 0.25rem;
    }
    
    .password-url {
        font-size: 0.875rem;
        color: #6c757d;
    }
    
    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
        color: #6c757d;
    }
    
    .empty-state i {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.3;
    }
    
    .action-buttons {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }
    
    .btn-primary {
        background: #2563eb;
        border-color: #2563eb;
        padding: 0.625rem 1.25rem;
        font-size: 0.875rem;
        font-weight: 500;
    }
    
    .btn-primary:hover {
        background: #1d4ed8;
        border-color: #1d4ed8;
    }
    
    .btn-outline-secondary, .btn-outline-danger {
        padding: 0.625rem 1.25rem;
        font-size: 0.875rem;
        font-weight: 500;
    }
    
    /* Consistent action button sizing */
    .btn-action {
        padding: 0.5rem 0.75rem;
        font-size: 0.875rem;
        border-radius: 6px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 36px;
        height: 36px;
    }
    
    .btn-action i {
        font-size: 1rem;
    }
    
    .btn-action.btn-sm {
        padding: 0.375rem 0.625rem;
        min-width: 32px;
        height: 32px;
    }
    
    .btn-action.btn-sm i {
        font-size: 0.875rem;
    }
</style>

<div class="password-dashboard">
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h1><i class="bi bi-shield-lock me-2"></i>Password Manager</h1>
                <p class="text-muted mb-0">Securely store and manage passwords</p>
            </div>
            <div class="action-buttons">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Add Password
                </a>
                <a asp-action="Categories" class="btn btn-outline-secondary">
                    <i class="bi bi-tags me-1"></i>Categories
                </a>
                <a asp-action="ExportPdf" asp-route-categoryId="@Model.FilterCategoryId" asp-route-search="@Model.SearchTerm" class="btn btn-outline-danger">
                    <i class="bi bi-file-earmark-pdf me-1"></i>Export PDF
                </a>
            </div>
        </div>
    </div>

    <!-- Security Notice -->
    <div class="security-notice">
        <i class="bi bi-shield-check me-2"></i>
        <strong>Your passwords are encrypted</strong> using AES-256 encryption. To view a password, you'll need to re-enter your account password.
    </div>

    <!-- Search and Filter -->
    <div class="filter-card">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-5">
                <label class="form-label fw-500">Search</label>
                <input type="text" name="search" class="form-control" placeholder="Search by website, username, or notes..." value="@Model.SearchTerm" />
            </div>
            <div class="col-md-3">
                <label class="form-label fw-500">Category</label>
                <select name="categoryId" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id" selected="@(Model.FilterCategoryId == category.Id)">@category.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-1"></i>Search
                </button>
            </div>
            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </form>
    </div>

    <!-- Password List -->
    <div class="main-card">
        <div class="card-header">
            <h5 class="card-title">Stored Passwords</h5>
            <span class="badge bg-primary">@Model.TotalPasswords total</span>
        </div>

        @if (Model.Passwords.Any())
        {
            <table class="password-table">
                <thead>
                    <tr>
                        <th>Website / App</th>
                        <th>Username</th>
                        <th>Password</th>
                        <th>Category</th>
                        <th style="text-align: center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var password in Model.Passwords)
                    {
                        <tr>
                            <td>
                                <div class="password-name">@password.WebsiteOrAppName</div>
                                @if (!string.IsNullOrEmpty(password.WebsiteUrl))
                                {
                                    <div class="password-url">
                                        <a href="@password.WebsiteUrl" target="_blank" class="text-decoration-none">
                                            <i class="bi bi-box-arrow-up-right me-1"></i>@password.WebsiteUrl
                                        </a>
                                    </div>
                                }
                            </td>
                            <td>@password.Username</td>
                            <td>
                                <span class="text-muted">@password.MaskedPassword</span>
                                <a asp-action="Reveal" asp-route-id="@password.Id" class="btn btn-action btn-sm btn-outline-secondary ms-2" title="Reveal Password">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </td>
                            <td><span class="badge bg-secondary">@password.CategoryName</span></td>
                            <td style="text-align: center;">
                                <a asp-action="Edit" asp-route-id="@password.Id" class="btn btn-action btn-sm btn-outline-primary" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@password.Id" class="btn btn-action btn-sm btn-outline-danger ms-1" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-shield-lock"></i>
                <p>No passwords stored yet</p>
                <a asp-action="Create" class="btn btn-primary">Store Your First Password</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
