@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card shadow-lg border-0">
            <div class="card-body p-5">
                <i class="bi bi-shield-exclamation text-danger" style="font-size: 4rem;"></i>
                <h2 class="mt-3 fw-bold">Access Denied</h2>
                <p class="text-muted">You do not have permission to access this resource.</p>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary mt-3">
                    <i class="bi bi-house me-2"></i>Go to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>
